# Environment Configuration Example
# Copy this file to config.env and replace with your actual values

NODE_ENV=development
PORT=8000
USERNAME=your_username

# Database Configuration
DATABASE=mongodb+srv://username:<PASSWORD>@cluster.mongodb.net/database_name?retryWrites=true&w=majority
DATABASE_LOCAL=mongodb://localhost:27017/database_name
DATABASE_PASSWORD=your_database_password

# JWT Configuration (use a strong, random secret)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email Configuration (Mailtrap for development)
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=465

# Production Email
EMAIL_FROM=your_email@domain.com

# Mailgun Configuration
MAILGUN_API=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret